<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:paddingBottom="@dimen/action_drawer_peek_view_additional_bottom_padding">

    <ImageView
        android:id="@+id/wearable_support_action_drawer_peek_action_icon"
        android:layout_width="@dimen/peek_view_icon_size"
        android:layout_height="@dimen/peek_view_icon_size"
        android:visibility="gone"
        android:tint="?android:attr/colorForeground" />

    <ImageView
        android:id="@+id/wearable_support_action_drawer_peek_overflow_icon"
        android:layout_width="@dimen/peek_view_icon_size"
        android:layout_height="@dimen/peek_view_icon_size"
        android:src="@drawable/ic_more_vert_24dp_wht"
        android:tint="?android:attr/colorForeground" />

</LinearLayout>

